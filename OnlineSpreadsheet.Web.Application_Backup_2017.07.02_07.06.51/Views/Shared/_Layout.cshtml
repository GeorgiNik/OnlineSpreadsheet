<!DOCTYPE html>
<html ng-app="app" ng-cloak>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Liberty Global</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/Kendo/css")
    @Styles.Render("~/Content/fontAwesome")
    @RenderSection("styles", required: false)

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/kendo")
</head>
<body>
    <div id="wrapper" class="background-image">
        <div class="navbar navbar-inverse navbar-fixed-top" id="header">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("OnlineSpreadsheet", "Index", "Home", new { }, new { @class = "navbar-brand" })*@

                <a href="/Home/Index">
                    <div class="logo-container">
                        <img src="/Images/Shared/newlogo.jpg" class="logo" />
                    </div>
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <div class="nav navbar-nav">
                    @Html.Partial("_DropdownNavigation")
                </div>
                <div class="nav navbar-nav pull-right">
                    @Html.Partial("_CurrentUser")
                </div>
            </div>
            @Html.Partial("_Submenus")
        </div>
        <div id="content">
            <br />
            @RenderBody()
        </div>
        @*<div id="footer"></div>*@
    </div>

    <div id="modal-container" class="modal fade" role="dialog"></div>
    @Scripts.Render("~/bundles/extensions")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/moment")
    @Scripts.Render("~/bundles/navigation")
    @Scripts.Render("~/bundles/modals")
    <script>
        var entityStatusActive = @((int)EntityStatus.Active);
        var entityStatusInactive = @((int)EntityStatus.Inactive);
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
