@using Microsoft.AspNet.Identity

@if (Request.IsAuthenticated)
    {
    <div class="dropdown">
        <button class="btn btn-default dropdown-toggle" type="button" id="survey-engine" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
            @Resources.MyProfile.ToUpper()
            <i class="fa fa-chevron-down"></i>
        </button>
        <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="survey-engine">

            <li><a href="/Manage/ChangePassword">@Resources.ChangePassword</a></li>
            <li><a href="/Account/LogOff">@Resources.LogOff</a></li>
        </ul>
    </div>
}